{
	"name": "pattaya",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "bun ./build/index.js",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lighthouse": "lighthouse http://localhost:4173 --preset=desktop --output html --output-path ./lighthouse-report.html",
		"lighthouse:mobile": "lighthouse http://localhost:4173 --output html --output-path ./lighthouse-mobile.html",
		"lighthouse:ci": "lighthouse http://localhost:4173 --only-categories=performance --output json --output-path ./lighthouse.json"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/enhanced-img": "^0.9.3",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"lighthouse": "^13.0.1",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.2.6"
	},
	"optionalDependencies": {
		"@rollup/rollup-linux-x64-gnu": "*"
	}
}